<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
            <TextView
                    android:id="@+id/tv_app_info"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="19sp"
                    android:clickable="true"
                    android:onClick="checkUpdates"
                    android:text="@string/app_name_ext"/>
            <ImageButton
                    android:id="@+id/btn_homepage"
                    android:focusable="true"
                    android:background="@null"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="13dp"
                    android:tooltipText="@string/tooltip_homepage"
                    android:onClick="jumpToHomepage"
                    android:src="@drawable/homepage"/>
            <ImageButton
                    android:id="@+id/btn_webViewGoBack"
                    android:focusable="true"
                    android:background="@null"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:elevation="16dp"
                    android:layout_toRightOf="@id/btn_homepage"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:onClick="webViewGoBackOrForward"
                    android:src="@drawable/go_back"
            />
            <ImageButton
                    android:id="@+id/btn_webViewGoForward"
                    android:focusable="true"
                    android:background="@null"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:elevation="16dp"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/btn_webViewGoBack"
                    android:onClick="webViewGoBackOrForward"
                    android:src="@drawable/go_forward"
            />
            <ImageButton
                    android:id="@+id/btn_showPopupMenu"
                    android:focusable="true"
                    android:background="@null"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/switchButton"
                    android:gravity="end"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:onClick="showPopupMenu"
                    android:src="@drawable/more"
            />
            <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switchButton"
                    android:focusable="true"
                    style="@style/SwitchButtonStyle"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:checked="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:kswAnimationDuration="300"
                    app:kswBackDrawable="@drawable/ios_back_drawable"
                    app:kswThumbDrawable="@drawable/ios_thumb_selector"
                    app:kswThumbMarginLeft="2dp"
                    app:kswThumbMarginBottom="0dp"
                    app:kswThumbMarginTop="3dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
            android:id="@+id/tv_alist_status"
            android:text="@string/alist_service_not_running"
            android:textSize="15sp"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:clickable="true"
            android:onClick="copyAddressToClipboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <WebView
            android:id="@+id/webview_alist"
            android:layout_below="@id/tv_alist_status"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <FrameLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</RelativeLayout>
